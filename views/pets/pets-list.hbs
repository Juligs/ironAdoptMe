<script src="https://kit.fontawesome.com/dc3bac782e.js" crossorigin="anonymous"></script>
<div class="container mt-5">
    <h5 class="display-4">Find a little friend</h5>
    <div class="row mt-5 justify-content-around">
        <div class="col-3 form-container">
            <form class="mt-5" method="GET" action="/pets/filter">
                <div class="mb-3">
                    <div class="form-outline mb-3">
                        <label for="addressInput" class="form-label">Filter by address</label>
                        <input type="text" class="form-control form-control-lg" id="addressInput" name="address">
                    </div>
                    <label for="ageInput" class="form-label">Filter by age</label>
                    <div class="d-flex">
                        <input type="number" class="form-control" id="ageInput" name="age">
                    </div>

                </div>
                <div class="mb-3">
                    <label for="breedInput" class="form-label">Filter by breed</label>
                    <input type="text" class="form-control" id="breedInput" name="breed">
                </div>
                <div class="mb-3">
                    <label for="tipoInput" class="form-label">Filter by species</label>
                    <select name="species" class="form-control" id="tipoInput">
                        <option value="PERRO">Perro</option>
                        <option value="GATO">Gato</option>
                    </select>
                </div>
                <div class="d-grid">
                    <button type="submit">Filtrar</button>
                </div>
            </form>
        </div>
        <div class="col-8 pets-container d-flex flex-wrap gap-3">
            {{#each pets}}
            <div id="petImage" class="card card-block">
                <img src="{{image}}" alt="Pet-image">
                <h5 class="card-title text-center mt-3 mb-3">{{name}}</h5>
                <p class="card-text text-center">{{status}}</p>
                <div class="d-flex"><a href="/pets/{{id}}/profile" class="btn btn-outline-dark text-center">Details</a>
                    {{#if isUser}}
                    <form action="/pets/{{_id}}/like"><button type="submit" class="button-23"><i
                                class="fa-regular fa-heart"></i></button></form>
                    {{/if}}
                </div>

            </div>
            {{/each}}
        </div>
        {{#if isShelter}}
        <a href="/pets/create" class="btn btn-outline-dark">Add new pet</a>
        {{/if}}
    </div>
</div>
<a href="/" class="btn btn-dark mt-2">Home</a>
</div>
</div>
<script src="../js/geocoding.js"></script>
<script src="../js/autocomplete.js"></script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjIJhN72PqJK2wdk2gLVBkE7XOh6ijmK8&libraries=places&callback=init"></script>