<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Add new pet</h1>
            <hr>

            <form action="/pets/create" method="POST" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="nameInput" class="form-label">Nombre de la mascota</label>
                    <input type="text" class="form-control" id="nameInput" name="name">
                    <div class="form-text">Requerido.</div>
                </div>
                <div class="mb-3">
                    <label for="ageInput" class="form-label">Edad de la mascota</label>
                    <input type="text" class="form-control" id="ageInput" name="age">
                </div>
                <div class="mb-3">
                    <label for="breedInput" class="form-label">Raza de la mascota</label>
                    <input type="text" class="form-control" id="breedInput" name="breed">
                </div>
                <div class="mb-3">
                    <label for="descriptionInput" class="form-label">Descripci√≥n</label>
                    <textarea class="form-control" id="descriptionInput" rows="3" name="description"></textarea>
                </div>
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="imageInput" name="petImg">
                    <div class="form-text">Sube la imagen de la mascota </div>
                </div>


                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Aad pet!</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>