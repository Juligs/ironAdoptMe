<div class="container-fluid">
    <div class="row no-gutter">
        <div class="col-md-6 d-none d-md-flex bg-image"></div>
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h3 class="display-4">Create New Event</h3>
                            <form action="/event/create" method="POST" enctype="multipart/form-data">
                                <div class="form-group mb-3">
                                    <label for="titleInput" class="form-label">Name of the event:</label>
                                    <input type="title"
                                        class="form-control rounded-pill border-0 shadow-sm px-4 text-primary"
                                        id="titleInput" name="title">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="descriptionInput" class="form-label">Description of the
                                        event:</label>
                                    <input type="text"
                                        class="form-control rounded-pill border-0 shadow-sm px-4 text-primary"
                                        id="descriptionInput" name="description">
                                </div>
                                <div class="custom-control custom-checkbox mb-3">
                                    <div class="mb-3">
                                        <label for="dateInput" class="form-label">Date:</label>
                                        <input type="date"
                                            class="form-control rounded-pill border-0 shadow-sm px-4 text-primary"
                                            id="dateInput" name="date">
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="addressInput" class="form-label">Address</label>
                                    <input type="text"
                                        class="form-control rounded-pill border-0 shadow-sm px-4 text-primary"
                                        id="addressInput" name="address">
                                </div>

                                <div class="form-group mb-3">
                                    <div class="mb-3">
                                        <label for="imageInput" class="form-label">Imagen</label>
                                        <input type="file"
                                            class="form-control rounded-pill border-0 shadow-sm px-4 text-primary"
                                            id="imageInput" name="image">
                                        <div class="form-text">Add image of the event </div>
                                    </div>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit"
                                        class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm"
                                        id="submitMap">Add Event!</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
</div>
<script src="../js/geocoding.js"></script>
<script src="../js/autocomplete.js"></script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjIJhN72PqJK2wdk2gLVBkE7XOh6ijmK8&libraries=places&callback=init"></script>

