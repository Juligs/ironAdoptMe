<div class="container mt-5 ">
    <div class="row">
        <h1>Maps</h1>
        <hr>
        <div class="col6 align-items-end">
            <figure id="myMap"></figure>
            <script src="/js/map.js"></script>
            <script
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjIJhN72PqJK2wdk2gLVBkE7XOh6ijmK8&callback=init"></script>
        </div>
    </div>
    <form action="/event/create" method="POST" enctype="multipart/form-data">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Event Name</th>
                    <th>Description</th>
                    <th>Addres</th>
                    <th>Date</th>
                    <th>Shelter</th>
                    <th>Event attendance </th>
                    <th>confirm assistance </th>
                    {{#if isShelter}}
                    <th>Edit event </th>
                    {{/if}}
                    {{#if isAdmin}}
                    <th>Edit event </th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each foundEvents}}
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="{{image}}" alt="" style="width: 70 px; height: 70px" class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">{{title}}</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">{{description}}</p>
                    </td>
                    <td>
                        <span class="badge badge-success rounded-pill d-inline">Active</span>
                    </td>
                    <td>{{address}}</td>
                    <td>
                        <p class="fw-normal mb-1">{{date}}</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">{{shelter}}</p>
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Default radio
                            </label>
                        </div>
                    </td>
                    <td>
                        {{#if isShelter }}
                        <a href="/" class="btn btn-dark">Edit</a>
                        <a href="/event/create" class="btn btn-dark">Create event</a>
                        {{/if}}

                        {{#if isAdmin }}
                        <a href="/" class="btn btn-dark">Edit</a>
                        <a href="/event/create" class="btn btn-dark">Create event</a>
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </form>
</div>