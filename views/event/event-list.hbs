<div class="container mt-5 ">
    <div class="row">
        <h1 class="text-white text-uppercase">Maps</h1>
        <hr>
        <div class="col6 align-items-end">
            <figure id="myMap"></figure>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script src="/js/map.js"></script>
            <script
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjIJhN72PqJK2wdk2gLVBkE7XOh6ijmK8&callback=init"></script>
            <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
        </div>
    </div>
    <hr>
    <div>
        <table class="table align-middle mb-0">
            <thead class="bg-light">
                <tr id="tableEvent">
                    <th>Event Name</th>
                    <th>Description</th>
                    <th>Addres</th>
                    <th>Date</th>
                    <th>Shelter</th>
                    <th>confirm assistance </th>
                    {{#if isShelter}}
                    <th>Edit event </th>
                    {{/if}}
                    {{#if isAdmin}}
                    <th>Edit event </th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each foundEvents}}
                <tr>
                    <td>
                        <div id="eventstable" lass="d-flex align-items-center">
                            <img src="{{image}}" alt="" style="width: 70 px; height: 70px" class="rounded-circle" />
                            <div class="ms-3">
                                <h4 class="fw-bold">{{title}}</h4>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal">{{description}}</p>
                    </td>
                    <td>
                        <p>{{address}}</p>
                    </td>
                    <td>
                        <p class="fw-normal">{{date}}</p>
                    </td>
                    <td>
                        <p>{{owner.username}}</p>
                    </td>
                    <td>
                        <p class="text-center"><button type="button" class="btn btn-info btn-rounded">Join</button></p>
                    </td>
                    <td>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>