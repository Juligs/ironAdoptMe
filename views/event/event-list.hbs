<div class="container mt-5 ">
    <div class="row">
        <h1>Maps</h1>
        <hr>
        <div class="col6 align-items-end">
            <figure id="myMap"></figure>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script src="/js/map.js"></script>
            <script
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjIJhN72PqJK2wdk2gLVBkE7XOh6ijmK8&callback=init"></script>
        </div>
    </div>
    <div class="buscador">
        <h2>Ingrese una direcci√≥n</h2>
        <input type="text" id="direccion">
        <div id="buscar">Buscar</div>
    </div>

    <div id="mapa-geocoder" class="mapa" style="width:100%;display:block;position:absolute;background:#f2777a;"></div>

    <script src="assets/js/jquery-2.1.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(window).on("load resize", function () {
                var alturaBuscador = $(".buscador").outerHeight(true),
                    alturaVentana = $(window).height(),
                    alturaMapa = alturaVentana - alturaBuscador;

                $("#mapa-geocoder").css("height", alturaMapa + "px");
            });
        });
    </script>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Event Name</th>
                <th>Description</th>
                <th>Addres</th>
                <th>Date</th>
                <th>Shelter</th>
                <th>confirm assistance </th>
                {{#if isShelter}}
                <th>Edit event </th>
                {{/if}}
                {{#if isAdmin}}
                <th>Edit event </th>
                {{/if}}
            </tr>
        </thead>
        <tbody>
            {{#each foundEvents}}
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <img src="{{image}}" alt="" style="width: 70 px; height: 70px" class="rounded-circle" />
                        <div class="ms-3">
                            <p class="fw-bold mb-1">{{title}}</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal mb-1">{{description}}</p>
                </td>
                <td>
                    <span>{{address}}</span>
                </td>
                <td>
                    <p class="fw-normal mb-1">{{date}}</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">{{owner.username}}</p>
                </td>
                <td>

                </td>
                <td>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>