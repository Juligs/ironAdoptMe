<div class="container mt-5 ">
    <div class="row d-flex justify-content-around">
        <div class="col-6">
            <figure id="myMapDetails"></figure>

        </div>
        <div class="col-3">
            <div id="cardDetails" class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{event.image}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{event.title}}</h5>
                    <p class="card-text">{{event.description}}</p>
                    <input type="hidden" value="{{event._id}}" id="eventID">
                </div>
                <ul class="list-group list-group-flush">
                    <li id="cardDetailsGroup" class="list-group-item"> Date: {{event.date}}</li>
                    <li id="cardDetailsGroup1" class="list-group-item"> Address :{{event.address}}</li>
                </ul>
                <div>
                    {{#if (isOwner event.owner._id user._id)}}
                    <form action="/event/{{event.id}}/delete" method="POST" style="display: inline">
                        <input type="submit" value="Delete Event" class="btn btn-outline-light text-center mb-3">
                    </form>
                    <a href="/event/{{event.id}}/edit" class="btn btn-outline-light text-center mb-3">Edit Event</a>
                    {{/if}}
                </div>

            </div>
        </div>
    </div>
</div>
<hr>
<h4 class="text-center text-secondary text-uppercase">Participants</h4>
<hr>
<div class="container mt-3">
    <div class="d-flex gap-3 flex-wrap">
        {{#each event.participants}}
        <div class="mr-2"><img src="{{this.image}}" alt="" style="width: 70 px; height: 70px"
                class="rounded-circle d-block" /></div>
        {{/each}}
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/map.details.js"></script>
