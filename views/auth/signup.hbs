<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Registro</h1>
            <hr>

            <form action="/signup" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Dirección de email</label>
                        <input type="email" class="form-control" id="emailInput" name="email">
                        <div class="form-text">Requerido.</div>
                    </div>
                    <div class="col">
                        <label for="pwdInput" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="pwdInput" name="password">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username">
                </div>
                <div class="mb-3">
                    <label for="addressInput" class="form-label">Dirección postal</label>
                    <input type="text" class="form-control" id="addressInput" name="address">
                </div>
                <div class="mb-3">
                    <label for="phoneInput" class="form-label">Número de teléfono</label>
                    <input type="number" class="form-control" id="phoneInput" name="phone">
                </div>
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg">
                    <div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Completar registro</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>