<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://i.pinimg.com/564x/bc/e9/42/bce942ee9407c1290bf85ebbb65c29b2.jpg"
                    class="img-fluid mt-3 mb-3" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 ">

                <!-- Email input -->
                <form id="login" action="/login" method="POST">
                    <div class="form-outline   mb-4">
                        <label for="emailInput" class="form-label">Email</label>
                        <input type="email" class="form-control form-control-lg" id="emailInput" name="email"
                            placeholder="Enter a valid email address">
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label for="pwdInput" class="form-label">Password</label>
                        <input type="password" class="form-control form-control-lg" id="pwdInput" name="password"
                            placeholder="Enter password">
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Remember me
                            </label>
                        </div>

                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-outline-dark">Login</button>
                        </div>
                        <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/signup"
                                class="link-dark">Register</a></p>
                        <a href="/" class="btn btn-outline-light mt-4">Go home</a>

                    </div>

                </form>
            </div>
        </div>
    </div>
