<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="card col-8 h-100">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{user.image}}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Name: {{user.username}}</h5>
                        <h6 class="card-title"> About me: {{user.description}}</h6>
                        <h6 class="card-title">Role: {{user.role}}</h6>
                        <h6 class="card-title">Email: {{user.email}}</h6>
                        <h6 class="card-title">Address: {{user.address}}</h6>
                        <h6 class="card-title"> Phone: {{user.phone}}</h6>

                        {{#if isAdmin}}
                        <a href='/user/{{user._id}}/edit' class="btn btn-dark">edit profile</a>
                        <form action="/user/{{user._id}}/delete" method="POST" style="display: inline">
                            <input type="submit" value="delete profile" class="btn btn-danger">
                        </form>
                        {{/if}}

                        {{#if isOwner}}
                        <a href="/user/{{user._id}}/edit" class="btn btn-warning">edit profile</a>
                        {{/if}}

                    </div>
                </div>
            </div>
            <a href="/" class="btn btn-dark">Inicio</a>
        </div>
    </div>
</div>



